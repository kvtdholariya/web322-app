<div class="row">
    <div class="col-md-12">
        <!-- Assignment#5code to create a "button" that links to the "/categories/add" route-->
        <h2>Categories <a href="/categories/add" class="btn btn-success pull-right">Add Category</a></h2>
        <hr />
        <div class="table-responsive">
            <table class="table ">
                <thead>
                    <tr>
                        <th>Category&nbsp;ID</th>
                        <th>Category Name</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                    <tr>
                        <td> <a href="/posts?category={{id}}" +>{{ id }}</a></td>
                        <td> <a href="/posts?category={{id}}">{{ category }}</a></td>
                        <!-- added below link to remove categories ,Add a "remove" link for every category within in a new column of the table-->
                        <td><a class="btn btn-danger" href="/categories/delete/{{id}}">remove</a></td>
                    </tr>
                    {{~/each}}

                    {{#unless categories}}
                    <div class="col-md-12 text-center">
                        <strong>{{message}}</strong>
                    </div>
                    {{/unless}}
                </tbody>
            </table>
        </div>
    </div>
</div>