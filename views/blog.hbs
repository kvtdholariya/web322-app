<div class="row">
    <section class="main col-md-9">
        <article>
            {{#if viewData.post }}
                <h2>{{viewData.post.title}}</h2>
                <img src="{{viewData.post.featureImage}}" alt="feature Image" style="width:100%" />
                <br /><br />
                {{#safeHTML viewData.post.body}}{{/safeHTML}}
                <br /><br />
                <strong>Category:</strong> {{viewData.post.category}}<br />
                <strong>Last Updated: </strong>{{#formatDate viewData.post.postDate}}{{/formatDate}}
            {{else}}
                <div class="col-md-12 text-center">
                    <h2>{{viewData.message}}</h2>
                    <p>Please try another Post / Category</p>
                </div>

            {{/if}}
        </article>
      
    </section>
    <aside class="col-md-3">
        <br /><br />
        {{#if viewData.posts }}
            <h4>Posts</h4>

            <ul class="list-group">
                {{#each viewData.posts}}
                    <a href="/blog/{{this.id}}?category={{../viewingCategory}}" class="list-group-item">{{this.title}}</a>
                {{/each}}
            </ul>
        {{/if}}

        {{#if viewData.categories }}
            <h4>Categories</h4>

            <ul class="list-group">
                {{#each viewData.categories}}
                    <a href="/blog?category={{id}}" class="list-group-item">{{category}}</a>
                {{/each}}
            </ul>
        {{/if}}
      
    </aside>
</div>